{
    "version": 10,
    "configurePresets": [
        {
            "name": "basic",
            "displayName": "Basic Build",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "full",
            "displayName": "All features",
            "inherits": "basic",
            "cacheVariables": {
                "USING_UNSUP": "ON",
                "EXCLUSIVLY_TARGET_CLIENT": "ON"
            }
        },
        {
            "name": "dev",
            "inherits": "full",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "basic",
            "displayName": "Basic Build",
            "configurePreset": "basic"
        },
        {
            "name": "full",
            "inherits": "basic",
            "configurePreset": "full",
            "displayName": "Full Build"
        },
        {
            "name": "dev",
            "inherits": "basic",
            "configurePreset": "dev"
        }
    ],
    "workflowPresets": [
        {
            "name": "basic",
            "displayName": "Basic Build",
            "steps": [
                {
                    "type": "configure",
                    "name": "basic"
                },
                {
                    "type": "build",
                    "name": "basic"
                }
            ]
        },
        {
            "name": "full",
            "displayName": "Full Build",
            "steps": [
                {
                    "type": "configure",
                    "name": "full"
                },
                {
                    "type": "build",
                    "name": "full"
                }
            ]
        },
        {
            "name": "dev",
            "displayName": "Dev Build",
            "steps": [
                {
                    "type": "configure",
                    "name": "dev"
                },
                {
                    "type": "build",
                    "name": "dev"
                }
            ]
        }
    ]
}